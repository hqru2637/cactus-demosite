---
import { Image } from "astro:assets";
import HeaderNav from "./HeaderNav.astro";

import logo from "../../../assets/logo_header.webp";
---

<div class="header">
    <div class="center">
        <a href="/">
            <div class="logo">
                <Image src={logo} alt="CACTUS logo" width={210} height={60} />
            </div>
        </a>
    </div>
    <HeaderNav />
</div>

<style>
    .header {
        background-color: #f1f1f1;
        padding-top: 10px;
        padding-bottom: 10px;
        display: grid;
        grid-template-columns: 50% 50%;
    }

    .logo {
        display: flex;
        justify-content: left;
        align-items: center;
        height: 100%;
        margin-left: 50px;
    }

    .center {
        text-align: center;
    }
</style>
