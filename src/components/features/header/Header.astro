---
import { Image } from "astro:assets";
import HeaderNav from "./HeaderNav.astro";

import logo from "../../../assets/logo_header.png";
---

<div class="header">
    <div class="center">
        <a href="/">
            <div class="logo">
                <Image
                    src={logo}
                    alt="CACTUS logo"
                    width={875}
                    height={250}
                    class="logo-img"
                />
            </div>
        </a>
    </div>
    <HeaderNav />
</div>

<style>
    .header {
        background-color: #31a33d;
        padding-top: 10px;
        padding-bottom: 10px;
        display: grid;
        grid-template-columns: 50% 50%;
    }

    .logo {
        display: flex;
        justify-content: left;
        align-items: center;
        margin-left: 50px;
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .logo-img {
        height: 60px;
        width: 210px;
    }

    .center {
        text-align: center;
    }
</style>
